{
  "name": "matchtagger",
  "version": "1.1.1",
  "description": "A tool for annotating tracklet IDs in video frames",
  "author": {
    "name": "MatchTagger Development Team",
    "email": "team@matchtagger.com"
  },
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build && node scripts/fix-paths.js",
    "start": "next start",
    "lint": "next lint",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron-build": "npm run build && electron-builder",
    "build-linux": "npm run build && electron-builder --linux",
    "build-windows": "npm run build && electron-builder --win",
    "build-all": "npm run build && electron-builder --linux --win"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "fabric": "^6.7.0",
    "i18next": "^25.3.2",
    "next": "15.3.5",
    "next-i18next": "^15.4.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hotkeys-hook": "^5.1.0",
    "react-i18next": "^15.6.0",
    "wait-on": "^8.0.3",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/fabric": "^5.3.10",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "electron": "^37.2.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.matchtagger.app",
    "productName": "Match Tagger",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Graphics",
      "description": "A tool for annotating sport games tracklet IDs in video frames",
      "icon": "public/android-chrome-512x512.png"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/android-chrome-512x512.png"
    }
  }
}
